{
  "compilerOptions": {
    "target": "ESNext", // JavaScript 버전
    "module": "ESNext", // JavaScript Module
    "outDir": "dist", // 컴파일된 JavaScript 파일 디렉터리
    "strict": true, // 엄격 모드
    "moduleDetection": "force" // 모든 TypeScript 파일들을 개별 모듈로 적용 (export {})
  },
  "include": ["src"] // 어던 디렉터리 안의 파일들을 컴파일할 것인지
}
